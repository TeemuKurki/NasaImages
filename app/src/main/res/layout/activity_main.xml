<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.teemukurki.myapplication.activity.MainActivity"
    android:id="@+id/mainLayout">

    <Button
        android:id="@+id/clear_db"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="TyhjennÃ¤ realm"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@android:style/ButtonBar"/>


    <com.teemukurki.myapplication.view.MyRecyclerView
        android:id="@+id/recycler"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clear_db"
        app:layout_constraintRight_toRightOf="parent">
    </com.teemukurki.myapplication.view.MyRecyclerView>
    <EditText
        android:id="@+id/date"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/clear_db"
        app:layout_constraintTop_toTopOf="parent"/>


</android.support.constraint.ConstraintLayout>
